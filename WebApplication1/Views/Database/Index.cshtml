@{
    ViewBag.Title = "Home Page";
}

<h2>Home</h2>

<h2>View Database</h2>
<table class="table">
    <tr>
        <th>FirstName</th>
        <th>Last Name</th>
        <th>Email</th>
    </tr>


    @foreach (var x in ViewBag.GuestList)
    {
        <tr>
            <td>@x.FirstName</td>
            <td>@x.LastNAme</td>
            <td>@x.Email</td>

            <td><a href="~/Database/EditGuest?ID=@x.GuestID" class="btn-primary">Edit</a></td>
            <td><a href="~/Database/DeleteGuest?ID=@x.GuestID" class="btn-block">Delete</a></td>
        </tr>

    }
</table>
<p><a href="~/Home/RSVP" class="btn-primary">Add a user</a></p>
